<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="walkingschoolbus.cmpt276.ca.appUI.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MainActivity_mapBtn"
        android:text="@string/title_activity_maps"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <Button
        android:id="@+id/parentList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/MainActivity_mapBtn"
        android:layout_alignStart="@+id/MainActivity_mapBtn"
        android:layout_below="@+id/MainActivity_mapBtn"
        android:layout_marginTop="29dp"
        android:text="ParentList" />

    <Button
        android:id="@+id/Childlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/parentList"
        android:layout_alignRight="@+id/parentList"
        android:layout_below="@+id/parentList"
        android:layout_marginTop="52dp"
        android:text="Childlist" />

</android.widget.RelativeLayout>